@{
    ViewData["Title"] = "Torneos";
}

<div class="container">
    <h1 class="text-center my-4">🏆 Torneos</h1>
    <p class="text-center">Descubre los torneos actuales y próximos. ¡Inscríbete y compite!</p>

    <div class="table-responsive">
        <table class="table table-striped table-hover text-center">
            <thead class="table-dark">
                <tr>
                    <th>🏅 Nombre del Torneo</th>
                    <th>📅 Fecha de Inicio</th>
                    <th>📍 Ubicación</th>
                    <th>🔍 Acción</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Copa La Mejenguera</td>
                    <td>15 de Marzo 2025</td>
                    <td>San José</td>
                    <td><a href="#" class="btn btn-primary btn-sm">Ver detalles</a></td>
                </tr>
                <tr>
                    <td>Clásico Tico</td>
                    <td>20 de Abril 2025</td>
                    <td>Alajuela</td>
                    <td><a href="#" class="btn btn-primary btn-sm">Ver detalles</a></td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="text-center my-4">
        <a href="#inscripcion" class="btn btn-success">📋 Inscribirse a un torneo</a>
    </div>

    <section id="inscripcion" class="p-4 bg-light rounded">
        <h2 class="text-center">📝 Inscripción al Torneo</h2>
        <form id="inscripcionForm" class="d-flex flex-column align-items-center">
            <div class="mb-3 w-50">
                <input type="text" id="teamName" class="form-control" placeholder="Nombre del equipo" required>
            </div>
            <div class="mb-3 w-50">
                <input type="text" id="captainName" class="form-control" placeholder="Nombre del capitán" required>
            </div>
            <button type="submit" class="btn btn-primary">✅ Registrar Equipo</button>
        </form>
    </section>
</div>

<script>
    document.getElementById('inscripcionForm').addEventListener('submit', function (event) {
        event.preventDefault();
        let teamName = document.getElementById('teamName').value;
        let captainName = document.getElementById('captainName').value;
        if (teamName && captainName) {
            alert('Equipo "' + teamName + '" registrado con éxito. Capitán: ' + captainName);
            document.getElementById('inscripcionForm').reset();
        }
    });
</script>