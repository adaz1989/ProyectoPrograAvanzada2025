@model ProyectoDeportivoCR.Models.CategoriaModel

@{
    ViewBag.Title = "Actualizar Categoría";
}

<head>
    <link rel="stylesheet" href="~/css/EstilosCRUD.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" />
</head>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">
                        <i class="bi bi-pencil-square me-2"></i>@ViewBag.Title
                    </h3>
                </div>

                <div class="card-body">
                    @if (ViewBag.Mensaje != null)
                    {
                        <div class="alert alert-info text-center mb-4" role="alert">
                            @ViewBag.Mensaje
                        </div>
                    }

                    <form asp-action="ActualizarCategoria" method="post">
                        @Html.AntiForgeryToken()
                        <input asp-for="CategoriaId" type="hidden" />

                        <!-- Nombre -->
                        <div class="mb-4">
                            <label asp-for="NombreCategoria" class="form-label fw-bold">
                                <i class="bi bi-tag me-1"></i>Nombre de la categoría
                            </label>
                            <input asp-for="NombreCategoria"
                                   class="form-control"
                                   placeholder="Ej: Juvenil A" />
                            <span asp-validation-for="NombreCategoria" class="text-danger small"></span>
                        </div>

                        <!-- Edades -->
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label asp-for="EdadMinima" class="form-label fw-bold">
                                    <i class="bi bi-arrow-down me-1"></i>Edad mínima
                                </label>
                                <input asp-for="EdadMinima"
                                       class="form-control"
                                       placeholder="Ej: 12" />
                                <span asp-validation-for="EdadMinima" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="EdadMaxima" class="form-label fw-bold">
                                    <i class="bi bi-arrow-up me-1"></i>Edad máxima
                                </label>
                                <input asp-for="EdadMaxima"
                                       class="form-control"
                                       placeholder="Ej: 18" />
                                <span asp-validation-for="EdadMaxima" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Botones -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-5">
                            <button type="submit" class="btn btn-success px-4">
                                <i class="bi bi-save me-2"></i>Guardar cambios
                            </button>
                            <a asp-action="ObtenerCategorias" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left me-2"></i>Volver al listado
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>