@{
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
}

<!-- Enlace a la hoja de estilos del login -->
<link rel="stylesheet" href="~/css/loggin.css" />

<section class="login-container">
    <!-- Balones animados -->
    <span class="ball ball1">🎾</span>
    <span class="ball ball2">🏀</span>
    <span class="ball ball3">⚽️</span>
    <span class="ball ball4">🏐</span>
    <span class="ball ball5">🏓</span>
    <span class="ball ball6">🏈</span>

    <!-- Tarjeta del formulario de login -->
    <div class="card-login">
        <div class="card-header">
            Iniciar Sesión
        </div>
        <div class="card-body">
            <form asp-controller="Login" asp-action="IniciarSesion" method="post">
                <div class="mb-3">
                    <label for="CorreoUsuario" class="form-label">Correo</label>
                    <input type="email"
                           id="CorreoUsuario"
                           name="CorreoUsuario"
                           class="form-control"
                           placeholder="usuario@dominio.com"
                           required />
                </div>

                <div class="mb-4">
                    <label for="Contrasenna" class="form-label">Contraseña</label>
                    <input type="password"
                           id="Contrasenna"
                           name="Contrasenna"
                           class="form-control"
                           placeholder="••••••••"
                           required />
                </div>

                <button type="submit" class="btn-login">
                    Ingresar al sitio
                </button>
            </form>

            <p class="text-register">
                ¿No tienes una cuenta?
                <a asp-controller="Login" asp-action="RegistrarUsuario">Regístrate aquí</a>
            </p>

            <p class="text-register mt-3">
                <a asp-controller="Home" asp-action="Index" class="link-back">Volver al sitio sin iniciar sesión</a>
            </p>
        </div>
    </div>
</section>
