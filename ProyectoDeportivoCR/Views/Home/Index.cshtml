@{
    ViewData["Title"] = "Inicio";
}

<section class="section swiper-container swiper-slider swiper-classic bg-gray-2"
         data-loop="true"
         data-autoplay="4000"
         data-simulate-touch="false"
         data-slide-effect="fade">
    <div class="swiper-wrapper">

        <!-- Slide 1: Fútbol -->
        <div class="swiper-slide">
            <img src="@Url.Content("~/images/shop/sele.jpg")" class="swiper-img" alt="Fútbol" />
            <div class="swiper-slide-caption text-center">
                <h1>Reserva tu Cancha</h1>
                <h4>Disfruta del deporte y la cultura</h4>
                <a class="button button-primary mt-3" asp-controller="Cancha" asp-action="Index">Ver más</a>
            </div>
        </div>

        <!-- Slide 2: Tenis -->
        <div class="swiper-slide">
            <img src="@Url.Content("~/images/shop/tennis.jpg")" class="swiper-img" alt="Tenis" />
            <div class="swiper-slide-caption text-center">
                <h1>Organiza tu Torneo</h1>
                <h4>Actívate y promueve la integración</h4>
                <a class="button button-primary mt-3" asp-controller="Torneos" asp-action="ConsultarTorneos">Ver Torneos</a>
            </div>
        </div>

        <!-- Slide 3: Baloncesto -->
        <div class="swiper-slide">
            <img src="@Url.Content("~/images/shop/basket.jpeg")" class="swiper-img" alt="Baloncesto" />
            <div class="swiper-slide-caption text-center">
                <h1>Vive el Baloncesto</h1>
                <h4>Fomenta la pasión deportiva en tu comunidad</h4>
                <a class="button button-primary mt-3" asp-controller="Home" asp-action="SobreNosotros">Más información</a>
            </div>
        </div>

    </div>

    <div class="swiper-button swiper-button-prev"></div>
    <div class="swiper-button swiper-button-next"></div>
    <div class="swiper-pagination"></div>
</section>
