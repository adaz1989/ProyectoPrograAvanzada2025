@model ProyectoDeportivoCR.Models.CanchaModel

@{
    ViewBag.Title = "Registrar Cancha";
}

<head>
    <link rel="stylesheet" href="~/css/EstilosCRUD.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" />
</head>

<section class="section section-variant-1 bg-gray-100">
    <div class="container">
        <div class="row row-50 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-6">
                <div class="card-login-register" id="card-l-r">
                    <div class="card-top-panel">
                        <div class="card-top-panel-left">
                            <h5 class="card-title card-title-login">
                                <i class="bi bi-pin-map"></i> Registrar Cancha
                            </h5>
                        </div>
                    </div>

                    <div class="card-form card-form-login">
                        @if (ViewBag.Mensaje != null)
                        {
                            <div class="alert alert-info">
                                <i class="bi bi-check-circle-fill"></i> @ViewBag.Mensaje
                            </div>
                        }

                        <form asp-action="RegistrarCancha"
                              method="post"
                              enctype="multipart/form-data"
                              class="rd-form">

                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <div class="form-wrap">
                                <p><i class="bi bi-building"></i> Nombre de la Cancha</p>
                                <input asp-for="NombreCancha" class="form-input" placeholder="Ej: Cancha Futbol 5 Los Ángeles" />
                                <span asp-validation-for="NombreCancha" class="text-danger small"></span>
                            </div>

                            <div class="form-wrap">
                                <p><i class="bi bi-currency-dollar"></i> Precio por Hora</p>
                                <input asp-for="PrecioHora" step="0.01" class="form-input" placeholder="00.00" />
                                <span asp-validation-for="PrecioHora" class="text-danger small"></span>
                            </div>

                            <div class="form-wrap">
                                <p><i class="bi bi-envelope"></i> Correo Electrónico</p>
                                <input asp-for="CorreoCancha" type="email" class="form-input" placeholder="contacto@cancha.com" />
                                <span asp-validation-for="CorreoCancha" class="text-danger small"></span>
                            </div>

                            <div class="form-wrap">
                                <p><i class="bi bi-telephone"></i> Teléfono</p>
                                <input asp-for="TelefonoCancha" type="tel" class="form-input" placeholder="8888-8888" />
                                <span asp-validation-for="TelefonoCancha" class="text-danger small"></span>
                            </div>

                            <div class="form-wrap">
                                <p><i class="bi bi-geo-alt"></i> Provincia</p>
                                <select asp-for="ProvinciaId" class="form-input" id="provinciaSelect">
                                    <option value="">Seleccione una Provincia</option>
                                    @foreach (var provincia in ViewBag.Provincias)
                                    {
                                        <option value="@provincia.ProvinciaId">@provincia.NombreProvincia</option>
                                    }
                                </select>
                                <span asp-validation-for="ProvinciaId" class="text-danger small"></span>
                            </div>

                            <div class="form-wrap">
                                <p>Cantón</p>
                                <select asp-for="CantonId" class="form-input" id="cantonSelect">
                                    <option value="">Seleccione un Cantón</option>
                                </select>
                                <span asp-validation-for="CantonId" class="text-danger small"></span>
                            </div>

                            <div class="form-wrap">
                                <p>Distrito</p>
                                <select asp-for="DistritoId" class="form-input" id="distritoSelect">
                                    <option value="">Seleccione un Distrito</option>
                                </select>
                                <span asp-validation-for="DistritoId" class="text-danger small"></span>
                            </div>

                            <div class="form-wrap">
                                <p>Deporte</p>
                                <select asp-for="DeporteId" class="form-input" asp-items="@(new SelectList(ViewBag.Deportes, "DeporteId", "NombreDeporte"))">
                                    <option value="">Seleccione un Deporte</option>
                                </select>
                                <span asp-validation-for="DeporteId" class="text-danger small"></span>
                            </div>

                            <div class="form-wrap">
                                <p><i class="bi bi-signpost"></i> Dirección Exacta</p>
                                <input asp-for="DetalleDireccion" class="form-input" placeholder="Ej: 200 metros norte del supermercado" />
                                <span asp-validation-for="DetalleDireccion" class="text-danger small"></span>
                            </div>

                            <div class="form-wrap">
                                <p><i class="bi bi-text-paragraph"></i> Descripción</p>
                                <textarea asp-for="DescripcionCancha" class="form-input" rows="4" placeholder="Ej: Cancha sintética con iluminación LED..."></textarea>
                                <span asp-validation-for="DescripcionCancha" class="text-danger small"></span>
                            </div>

                            <div class="form-wrap text-center">
                                <p><i class="bi bi-image"></i> Foto de la Cancha</p>
                                <label for="fotoCancha" class="dropzone">
                                    <i class="bi bi-cloud-upload-fill dropzone-icon"></i>
                                    <p class="dropzone-text">Haz clic o arrastra la imagen aquí</p>
                                    <p class="dropzone-subtext">JPEG/PNG, máx. 2 MB</p>
                                    <input asp-for="FotoCanchaWeb" id="fotoCancha" type="file" accept="image/jpeg, image/png" class="d-none" />
                                </label>
                                <span asp-validation-for="FotoCanchaWeb" class="text-danger small"></span>
                            </div>

                            <button type="submit" class="button button-lg button-primary button-block mt-3">
                                <i class="bi bi-check-circle-fill"></i> Registrar Cancha
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script>
    $(document).ready(function () {
        const apiBaseUrl = 'https://localhost:7054/api/Provincia';

        $('#provinciaSelect').change(function () {
            const provinciaId = $(this).val();
            $('#cantonSelect').empty().append('<option value="">Cargando...</option>');
            $('#distritoSelect').empty().append('<option value="">Seleccione un Distrito</option>');

            if (provinciaId) {
                $.ajax({
                    url: `${apiBaseUrl}/Cantones/${provinciaId}`,
                    method: 'GET',
                    success: function (cantones) {
                        $('#cantonSelect').empty().append('<option value="">Seleccione un Cantón</option>');
                        cantones.forEach(canton => {
                            $('#cantonSelect').append(`<option value="${canton.CantonId}">${canton.NombreCanton}</option>`);
                        });
                    },
                    error: function () {
                        alert('Error al cargar cantones.');
                    }
                });
            }
        });

        $('#cantonSelect').change(function () {
            const cantonId = $(this).val();
            $('#distritoSelect').empty().append('<option value="">Cargando...</option>');

            if (cantonId) {
                $.ajax({
                    url: `${apiBaseUrl}/Distritos/${cantonId}`,
                    method: 'GET',
                    success: function (distritos) {
                        $('#distritoSelect').empty().append('<option value="">Seleccione un Distrito</option>');
                        distritos.forEach(distrito => {
                            $('#distritoSelect').append(`<option value="${distrito.DistritoId}">${distrito.NombreDistrito}</option>`);
                        });
                    },
                    error: function () {
                        alert('Error al cargar distritos.');
                    }
                });
            }
        });
    });
</script>
