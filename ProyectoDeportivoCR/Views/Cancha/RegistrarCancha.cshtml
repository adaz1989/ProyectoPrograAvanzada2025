@model ProyectoDeportivoCR.Models.CanchaModel

@{
    ViewBag.Title = "Registrar Cancha";
}

<div class="container mt-5">
    <h2 class="mb-4">Registrar Cancha</h2>

    @if (ViewBag.Mensaje != null)
    {
        <div class="alert alert-info">
            @ViewBag.Mensaje
        </div>
    }

    <div class="container mt-5">
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="RegistrarCancha" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="NombreCancha" class="form-label">Nombre de la Cancha</label>
                        <input asp-for="NombreCancha" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="CorreoCancha" class="form-label">Correo</label>
                        <input asp-for="CorreoCancha" class="form-control" type="email" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="TelefonoCancha" class="form-label">Teléfono</label>
                        <input asp-for="TelefonoCancha" class="form-control" type="tel" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="PrecioHora" class="form-label">Precio por Hora</label>

                        <input asp-for="PrecioHora" class="form-control"/>

                        <input asp-for="PrecioHora" class="form-control" type="number" step="0.01" />

                    </div>

                    <div class="mb-3">
                        <label asp-for="DetalleDireccion" class="form-label">Dirección</label>
                        <input asp-for="DetalleDireccion" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="DescripcionCancha" class="form-label">Descripción</label>
                        <textarea asp-for="DescripcionCancha" class="form-control"></textarea>
                    </div>

                    <div class="mb-3">
                        <label asp-for="UsuarioId" class="form-label">ID de Usuario</label>
                        <input asp-for="UsuarioId" class="form-control" type="number" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="DeporteId" class="form-label">ID de Deporte</label>
                        <input asp-for="DeporteId" class="form-control" type="number" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="ProvinciaId" class="form-label">Provincia</label>
                        <input asp-for="ProvinciaId" class="form-control" type="number" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="CantonId" class="form-label">Cantón</label>
                        <input asp-for="CantonId" class="form-control" type="number" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="DistritoId" class="form-label">Distrito</label>
                        <input asp-for="DistritoId" class="form-control" type="number" />
                    </div>

                    <button type="submit" class="btn btn-success w-100">Registrar Cancha</button>
                </form>
            </div>
        </div>
    </div>
</div>